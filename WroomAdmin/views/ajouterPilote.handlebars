<h1>Ajouter un pilote</h1>

<form id="loginformA" action="ajouterPilote" method="post">

  <div>
      <label for="login">Prénom: </label>
      <input type="text" id="login" name="prenom"></input>
  </div>
  <div>
      <label for="login">Nom: </label>
      <input type="text" id="login" name="nom"></input>
  </div>
  <div>
      <label for="login">Date de naissance: </label>
      <input type="text" id="login" name="date"></input>/<input type="text" id="login" name="date"></input>/<input type="text" id="login" name="date"></input>
  </div>
  <div>
      <label for="login">Nationalité: </label>
      <select id="nationalite-select" name="nationalite">
        {{#each listeNationalite}}
        <option value="{{this.PAYNUM}}"> {{this.PAYNAT}}</option>
        {{/each}}
      </select>
  </div>
  <div>
      <label for="login">Ecurie: </label>
      <select id="ecurie-select" name="ecurie">
        {{#each listeEcurie}}
        <option value="{{this.ECUNUM}}"> {{this.ECUNOM}}</option>
        {{/each}}
      </select>
  </div>
  <div>
      <label for="login">Points: </label>
      <input type="text" id="login" name="points"></input>
  </div>
  <div>
      <label for="login">Poids: </label>
      <input type="text" id="login" name="poids"></input>
  </div>
  <div>
      <label for="login">Taille : </label>
      <input type="text" id="login" name="taille"></input>
  </div>
  <div>
      <label for="login">Description: </label>
      <input type="text" id="login" name="description"></input>
  </div>
<input type="submit" value="AJOUTER"> </input>
</form>
